<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/edit_quest"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/md_blue_500"
                android:src="@drawable/ic_create_white_24dp" />

            <ImageButton
                android:id="@+id/delete_quest"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/md_red_500"
                android:src="@drawable/ic_delete_white_24dp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/quest_context_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp">

                <View
                    android:id="@+id/quest_context_indicator_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_context_progress_indicator" />

                <ImageView
                    android:id="@+id/quest_context_indicator_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/quest_context_container"
                android:layout_centerVertical="true"
                android:layout_marginStart="72dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quest_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/md_dark_text_87"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/quest_repeating_quest_indicators_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/quest_progress_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" />

                    <android.support.v4.widget.Space
                        android:id="@+id/quest_progress_space"
                        android:layout_width="6dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/quest_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/md_dark_text_54" />
                </LinearLayout>

                <TextView
                    android:id="@+id/quest_next_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>