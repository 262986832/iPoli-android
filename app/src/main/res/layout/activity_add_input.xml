<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:minHeight="120dp"
    android:minWidth="300dp">

    <EditText
        android:id="@+id/input_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/input_mic_button"
        android:layout_toStartOf="@id/input_mic_button"
        android:hint="@string/speak_hint" />

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@id/input_mic_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="38dp"
        android:scaleType="center"
        app:materialIcon="microphone"
        app:materialIconColor="@color/md_blue_500"
        app:materialIconSize="36dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/input_query"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/input_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/input_ok"
            android:layout_toStartOf="@id/input_ok"
            android:text="@string/cancel"
            android:textColor="?attr/colorAccent" />

        <Button
            android:id="@id/input_ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/ok"
            android:textColor="?attr/colorAccent" />
    </RelativeLayout>

</RelativeLayout>