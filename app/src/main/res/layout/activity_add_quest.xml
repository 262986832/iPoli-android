<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quest_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/quest_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:hintTextAppearance="@style/TextAppearance.iPoli.EditText">

        <io.ipoli.android.quest.ui.AddQuestAutocompleteTextView
            android:id="@+id/quest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_quest_name_hint"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions|textMultiLine">

        </io.ipoli.android.quest.ui.AddQuestAutocompleteTextView>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/quest_context_name"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/md_dark_text_87" />

    <LinearLayout
        android:id="@+id/quest_context_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quest_context_learning"
            style="@style/QuestContextIndicator" />

        <ImageView
            android:id="@+id/quest_context_wellness"
            style="@style/QuestContextIndicator" />


        <ImageView
            android:id="@+id/quest_context_personal"
            style="@style/QuestContextIndicator" />

        <ImageView
            android:id="@+id/quest_context_work"
            style="@style/QuestContextIndicator" />


        <ImageView
            android:id="@+id/quest_context_fun"
            style="@style/QuestContextIndicator" />


        <ImageView
            android:id="@+id/quest_context_chores"
            style="@style/QuestContextIndicator"
            android:layout_marginEnd="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/quest_repeat_pattern_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/quest_repeat_pattern_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_repeating_quest_24dp" />

        <TextView
            android:id="@+id/quest_repeat_pattern_question"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/quest_repeat_pattern_icon"
            android:text="How often it should repeat?" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_repeat_pattern_question"
            android:layout_toEndOf="@id/quest_repeat_pattern_icon"
            android:text="Once" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quest_times_per_day_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/quest_times_per_day_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_multiply_black_24dp" />

        <TextView
            android:id="@+id/quest_times_per_day_question"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/quest_times_per_day_icon"
            android:text="How many times per day?" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_times_per_day_question"
            android:layout_toEndOf="@id/quest_times_per_day_icon"
            android:text="One" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quest_notes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/quest_notes_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_note_black_24dp" />

        <TextView
            android:id="@+id/quest_notes_question"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/quest_notes_icon"
            android:text="Notes/Description" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_notes_question"
            android:layout_toEndOf="@id/quest_notes_icon"
            android:text="None" />
    </RelativeLayout>
</LinearLayout>
