<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="16dp"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <io.ipoli.android.app.ui.calendar.CalendarLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/unscheduled_quests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white" />

        <View
            android:id="@+id/unscheduled_quests_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/unscheduled_quests"
            android:background="?attr/colorPrimary" />

        <io.ipoli.android.app.ui.calendar.CalendarDayView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/unscheduled_quests_divider"
            android:background="@color/md_white" />


    </io.ipoli.android.app.ui.calendar.CalendarLayout>


</android.support.design.widget.CoordinatorLayout>