<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="72dp"
    android:background="@color/md_dark_text_26"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quest_suggestion_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/quest_suggestion_next"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/md_light_text_87"
        android:textSize="16sp" />

    <ImageButton
        android:id="@id/quest_suggestion_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:src="@drawable/ic_smart_schedule" />
</RelativeLayout>