<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="72dp">

    <RelativeLayout
        android:id="@+id/quest_context_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/quest_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:materialIconColor="@color/md_white"
            app:materialIconSize="24dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/quest_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/quest_context_indicator"
        android:layout_toLeftOf="@+id/quest_start_button"
        android:layout_toRightOf="@id/quest_context_indicator"
        android:layout_toStartOf="@+id/quest_start_button"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/quest_name"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_dark_text_87" />

        <TextView
            android:id="@+id/quest_description"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_dark_text_54" />


        <TextView
            android:id="@+id/quest_duration"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_dark_text_26" />
    </LinearLayout>

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@id/quest_start_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        app:materialIcon="play_circle_outline"
        app:materialIconSize="28dp" />


</RelativeLayout>