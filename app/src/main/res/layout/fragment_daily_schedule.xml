<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.curiousily.ipoli.schedule.ui.dayview.DayView
        android:id="@+id/day_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:eventTextColor="@color/md_white"
        app:eventTextSize="16sp"
        app:hourHeight="140dp"
        app:noOfVisibleDays="1"
        app:nowLineColor="?attr/colorAccent"
        app:nowLineThickness="1dp"
        app:showHalfHours="true" />


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/schedule_loader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="@color/md_blue_500"
        wheel:matProg_progressIndeterminate="true" />

    <LinearLayout
        android:id="@+id/schedule_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            app:materialIcon="weather_sunny"
            app:materialIconColor="@color/md_yellow_700"
            app:materialIconSize="96dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="@string/schedule_missing"
            android:textColor="@color/md_dark_text_54" />

    </LinearLayout>
</RelativeLayout>
