<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp">

    <View
        android:id="@+id/quest_context_indicator"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp" />

    <LinearLayout
        android:id="@+id/quest_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/quest_context_indicator"
        android:layout_toLeftOf="@+id/quest_start_button"
        android:layout_toRightOf="@id/quest_context_indicator"
        android:layout_toStartOf="@+id/quest_start_button"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quest_name"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_dark_text_87" />

        <TextView
            android:id="@+id/quest_description"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_dark_text_54" />
    </LinearLayout>

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@id/quest_start_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scaleType="fitXY"
        app:materialIcon="play"
        app:materialIconColor="@color/md_dark_text_54"
        app:materialIconSize="24dp" />

    <TextView
        android:id="@+id/quest_duration"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/md_dark_text_26" />

</RelativeLayout>