<?xml version="1.0" encoding="utf-8"?>

<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/inbox_schedule_quest"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/md_orange_500"
                android:src="@drawable/ic_schedule_white_24dp" />

            <ImageButton
                android:id="@+id/inbox_complete_quest"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/md_green_500"
                android:src="@drawable/ic_done_white_24dp" />

            <ImageButton
                android:id="@+id/inbox_edit_quest"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/md_blue_500"
                android:src="@drawable/ic_create_white_24dp" />

            <ImageButton
                android:id="@+id/inbox_delete_quest"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/md_red_500"
                android:src="@drawable/ic_delete_white_24dp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/quest_context_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp">

                <View
                    android:id="@+id/quest_context_indicator_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_context_progress_indicator" />

                <ImageView
                    android:id="@+id/quest_context_indicator_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />
            </FrameLayout>


            <TextView
                android:id="@+id/quest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="72dp"
                android:layout_toStartOf="@+id/quest_created_at"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/md_dark_text_87"
                android:textSize="16sp" />

            <TextView
                android:id="@id/quest_created_at"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp" />
        </RelativeLayout>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>