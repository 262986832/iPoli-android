<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quest_running_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/md_dark_text_87" />

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/quest_running_duration"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:scaleType="center"
        app:materialIcon="pause"
        app:materialIconColor="?attr/colorAccent"
        app:materialIconSize="36dp" />

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/quest_running_duration"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="center"
        app:materialIcon="close"
        app:materialIconColor="?attr/colorAccent"
        app:materialIconSize="36dp" />

</RelativeLayout>